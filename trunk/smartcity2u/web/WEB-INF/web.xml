<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ufservice</servlet-name>
        <servlet-class>smartcities.control.UFService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>geocodeservice</servlet-name>
        <servlet-class>smartcities.control.GEOCodeservice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cepservlet</servlet-name>
        <servlet-class>smartcities.control.CEPService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WeatherService</servlet-name>
        <servlet-class>smartcities.control.WeatherService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ufservice</servlet-name>
        <url-pattern>/ufservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>geocodeservice</servlet-name>
        <url-pattern>/geocodeservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cepservlet</servlet-name>
        <url-pattern>/cepservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WeatherService</servlet-name>
        <url-pattern>/weatherservice</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>
</web-app>
